{% extends 'base.html.twig' %}

{% block title %}Détail du stagiaire #{{ stagiaire.id }}{% endblock %}

{% block body %}
<h1>Fiche stagiaire</h1>

<h2>{{ stagiaire }}</h2>

<ul>
    <li>Sexe : {{ stagiaire.sexe }}</li>
    <li>Date de naissance : {{ stagiaire.dateNaissance | date('d/m/Y') }} ({{ stagiaire.age }} ans)</li>
    <li>Ville : {{ stagiaire.ville }}</li>
    <li>Email : {{ stagiaire.email }}</li>
    <li>Téléphone : {{ stagiaire.telephone }}</li>
</ul>

<h2>Sessions prévues</h2>

<ul>
    {% for session in stagiaire.session %}
        <li>{{ session }} (du {{ session.dateDebut | date('d/m/Y') }} au {{ session.dateFin | date('d/m/Y') }})</li>
    {% endfor %}
</ul>

{% endblock %}