{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}

<h1>Liste des catégories ({{ categories | length }} au total)</h1>

<p><a href="{{ path('add_categorie') }}"><button type="button" class="btn btn-success">Ajouter une catégorie</button></a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Catégorie</th>
        </tr>
    </thead>
    <tbody>
        {% for categorie in categories %}
        <tr>
            <td> {{ categorie }} </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
